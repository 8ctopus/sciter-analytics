{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "listen xdebug 9001",
        "type": "php",
        "request": "launch",
        "port": 9001,
        "log": false,
        "stopOnEntry": false,
        "pathMappings":
        {
          "/var/www/html/": "${workspaceRoot}/html/"
        },
      },
      {
        "name": "listen CLI",
        "type": "php",
        "request": "launch",
        "port": 9000
      },
      {
        "name": "run CLI",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9000
      }
    ]
  }